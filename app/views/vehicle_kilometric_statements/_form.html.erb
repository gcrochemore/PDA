<%= simple_form_for(@vehicle_kilometric_statement) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :vehicle %>
    <%= f.input :date %>
    <%= f.input :mileage %>
    <%= f.input :use_duration %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
