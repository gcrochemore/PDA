<h1><%= t('.title') %><span class="badge"><%= @vehicle_kilometric_statements.count %></span></h1>

<div class="row">
  <div class="col-md-2">
    <legend class="filter-title"><%= t :search_title %></legend>
    <fieldset class="filter-panel">
      <%= search_form_for @q do |f| %>

        <%= f.search_field :vehicle_name_cont, {placeholder: t('activerecord.attributes.vehicle_kilometric_statement.vehicle')} %>

        <%= f.search_field :date_cont, {placeholder: t('activerecord.attributes.vehicle_kilometric_statement.date')} %>

        <%= f.search_field :mileage_cont, {placeholder: t('activerecord.attributes.vehicle_kilometric_statement.mileage')} %>

        <%= f.search_field :use_duration_cont, {placeholder: t('activerecord.attributes.vehicle_kilometric_statement.use_duration')} %>

        <br>
        <br>
        <%= f.submit class: 'btn btn-default btn-search-filter' %>
      <% end %>
    </fieldset>
  </div>
  <div class="col-md-10">
    <div class="col-md-3 btn-new-top">
      <% if can? :create, VehicleKilometricStatement %>
        <%= link_to ('<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> '+t('.new_button')).html_safe, url_for(action: :new), class: "btn btn-default" %>
      <% end %>
    </div>
    <table class="table table-hover table-condensed table-bordered">
      <thead>
        <tr>
    
          <th><%= sort_link(@q, :vehicle, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :date, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :mileage, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :use_duration, default_order: :asc) %></th>
    
          <th class="col-xs-1"></th>
        </tr>
      </thead>

      <tbody>
        <% @vehicle_kilometric_statements.each do |vehicle_kilometric_statement| %>
          <tr>
    
            <td><%= vehicle_kilometric_statement.vehicle %></td>
    
            <td><%= vehicle_kilometric_statement.date %></td>
    
            <td><%= vehicle_kilometric_statement.mileage %></td>
    
            <td><%= vehicle_kilometric_statement.use_duration %></td>
    
            <td>
              <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, vehicle_kilometric_statement %>
              <% if can? :edit, VehicleKilometricStatement %>
                <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_vehicle_kilometric_statement_path(vehicle_kilometric_statement) %>
              <% end %>
              <% if can? :destroy, VehicleKilometricStatement %>
                <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, vehicle_kilometric_statement, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @vehicle_kilometric_statements %>
  </div>
</div>