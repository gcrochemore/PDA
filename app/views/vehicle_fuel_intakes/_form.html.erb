<%= simple_form_for(@vehicle_fuel_intake) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div class="form-group">
      <label for="vehicle"><%= f.label :vehicle %></label>
      <%= f.association :vehicle, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="date"><%= f.label :date %></label>
      <%= f.input :date, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="volume"><%= f.label :volume %></label>
      <%= f.input :volume, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="amount"><%= f.label :amount %></label>
      <%= f.input :amount, label: false, input_html: { class: "form-control" } %>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
