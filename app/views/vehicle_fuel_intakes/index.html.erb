<h1><%= t('.title') %><span class="badge"><%= @vehicle_fuel_intakes.count %></span></h1>

<div class="row">
  <div class="col-md-2">
    <legend class="filter-title"><%= t :search_title %></legend>
    <fieldset class="filter-panel">
      <%= search_form_for @q do |f| %>

        <%= f.search_field :vehicle_name_cont, {placeholder: t('activerecord.attributes.vehicle_fuel_intake.vehicle')} %>

        <%= f.search_field :date_cont, {placeholder: t('activerecord.attributes.vehicle_fuel_intake.date')} %>

        <%= f.search_field :volume_cont, {placeholder: t('activerecord.attributes.vehicle_fuel_intake.volume')} %>

        <%= f.search_field :amount_cont, {placeholder: t('activerecord.attributes.vehicle_fuel_intake.amount')} %>

        <br>
        <br>
        <%= f.submit class: 'btn btn-default btn-search-filter' %>
      <% end %>
    </fieldset>
  </div>
  <div class="col-md-10">
    <div class="col-md-3 btn-new-top">
      <% if can? :create, VehicleFuelIntake %>
        <%= link_to ('<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> '+t('.new_button')).html_safe, url_for(action: :new), class: "btn btn-default" %>
      <% end %>
    </div>
    <table class="table table-hover table-condensed table-bordered">
      <thead>
        <tr>
    
          <th><%= sort_link(@q, :vehicle, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :date, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :volume, default_order: :asc) %></th>
    
          <th><%= sort_link(@q, :amount, default_order: :asc) %></th>
    
          <th class="col-xs-1"></th>
        </tr>
      </thead>

      <tbody>
        <% @vehicle_fuel_intakes.each do |vehicle_fuel_intake| %>
          <tr>
    
            <td><%= vehicle_fuel_intake.vehicle %></td>
    
            <td><%= vehicle_fuel_intake.date %></td>
    
            <td><%= vehicle_fuel_intake.volume %></td>
    
            <td><%= vehicle_fuel_intake.amount %></td>
    
            <td>
              <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, vehicle_fuel_intake %>
              <% if can? :edit, VehicleFuelIntake %>
                <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_vehicle_fuel_intake_path(vehicle_fuel_intake) %>
              <% end %>
              <% if can? :destroy, VehicleFuelIntake %>
                <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, vehicle_fuel_intake, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @vehicle_fuel_intakes %>
  </div>
</div>